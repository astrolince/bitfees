{
  "name": "bitfees",
  "version": "1.0.0",
  "description": "Bitcoin fees bot",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "test": "standard && node -r dotenv/config ."
  },
  "now": {
    "alias": "bitfees",
    "env": {
      "TW_CONSUMER_KEY": "@bitfees_tw_consumer_key",
      "TW_CONSUMER_SECRET": "@bitfees_tw_consumer_secret",
      "TW_ACCESS_TOKEN_KEY": "@bitfees_tw_access_token_key",
      "TW_ACCESS_TOKEN_SECRET": "@bitfees_tw_access_token_secret",
      "BITCOIN_CORE_HOST": "@bitcoin_core_host",
      "BITCOIN_CORE_PORT": "@bitcoin_core_port",
      "BITCOIN_CORE_USER": "@bitcoin_core_user",
      "BITCOIN_CORE_PASS": "@bitcoin_core_pass",
      "REDIS_URL": "@bitfees_redis_url",
      "REDIS_PASS": "@bitfees_redis_pass"
    }
  },
  "author": "astrolince",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/astrolince/bitfees.git"
  },
  "dependencies": {
    "bitcoin-core": "^2.0.0",
    "micro": "^9.1.0",
    "node-schedule": "^1.3.0",
    "redis": "^2.8.0",
    "trae": "^1.4.2",
    "twitter": "^1.7.1",
    "url-parse": "^1.2.0"
  },
  "devDependencies": {
    "dotenv": "*",
    "standard": "*"
  }
}
