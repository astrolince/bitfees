{
  "name": "coiny",
  "version": "0.0.1-alpha",
  "description": "Bitcoin fees bot",
  "main": "app.js",
  "scripts": {
    "start": "node .",
    "test": "standard && node -r dotenv/config ."
  },
  "now": {
    "alias": "coiny",
    "env": {
      "TW_CONSUMER_KEY": "@coinyfees_tw_consumer_key",
      "TW_CONSUMER_SECRET": "@coinyfees_tw_consumer_secret",
      "TW_ACCESS_TOKEN_KEY": "@coinyfees_tw_access_token_key",
      "TW_ACCESS_TOKEN_SECRET": "@coinyfees_tw_access_token_secret",
      "BITCOIN_CORE_HOST": "@bitcoin_core_host",
      "BITCOIN_CORE_PORT": "@bitcoin_core_port",
      "BITCOIN_CORE_USER": "@bitcoin_core_user",
      "BITCOIN_CORE_PASS": "@bitcoin_core_pass",
      "REDIS_URL": "@coinyfees_redis_url",
      "REDIS_PASS": "@coinyfees_redis_pass"
    }
  },
  "author": "astrolince",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/astrolince/coiny.git"
  },
  "dependencies": {
    "bitcoin-core": "^2.0.0",
    "koa": "^2.4.1",
    "koa-router": "^7.4.0",
    "node-schedule": "^1.3.0",
    "redis": "^2.8.0",
    "trae": "^1.4.2",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "dotenv": "*",
    "standard": "*"
  }
}
